
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.nov.weatherkotlin">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />



    <application
        android:name="net.nov.weatherkotlin.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WeatherKotlin">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <provider
            android:name="net.nov.weatherkotlin.repository.contentprovider.EducationContentProvider"
            android:authorities="geekbrains.provider"
            android:enabled="true"
            android:exported="true" />


       <activity android:name=".MainActivity">

        <intent-filter>

            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />

        </intent-filter>

    </activity>

        <service
            android:name="net.nov.weatherkotlin.experiments.services.MyForegroundService"
            android:enabled="true"
            android:foregroundServiceType="location" />

        <service
            android:name="net.nov.weatherkotlin.experiments.services.ServiceWithThread"
            android:enabled="true"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <service
            android:name="net.nov.weatherkotlin.experiments.services.UsualService"
            android:enabled="true" />



        <receiver android:name="net.nov.weatherkotlin.receivers.MainBroadcastReceiver">



            <intent-filter>

                <action android:name="android.intent.action.LOCALE_CHANGED" />

            </intent-filter>

        </receiver>

    </application>

</manifest>